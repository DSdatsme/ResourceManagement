<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp">

                <Button
                    android:id="@+id/btnUsedMonitor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_rounded_login"
                    android:text="Monitor"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btnUsedKeyboard"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_rounded_login"
                    android:text="Keyboard"
                    android:textColor="@color/white"
                    android:textSize="17sp" />


                <Button
                    android:id="@+id/btnUsedMouse"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_rounded_login"
                    android:text="Mouse"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btnUsedCpu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_rounded_login"
                    android:text="CPU"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btnUsedMacMini"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_rounded_login"
                    android:text="Mac Mini"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btnUsedUsb"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_rounded_login"
                    android:text="USB Cables"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btnUsedHeadPhones"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_rounded_login"
                    android:text="HeadPhones"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btnUsedPrinter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_rounded_login"
                    android:text="Printer"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
